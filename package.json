{
    "name": "@tech_query/node-toolkit",
    "version": "1.0.0",
    "description": "Toolkit for Node.JS packages",
    "keywords": [
        "toolkit",
        "toolbox",
        "utility",
        "node",
        "package",
        "library",
        "module"
    ],
    "author": "shiy2008@gmail.com",
    "license": "LGPL-3.0",
    "homepage": "https://tech-query.me/node-toolkit/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/node-toolkit.git"
    },
    "bugs": {
        "url": "https://github.com/TechQuery/node-toolkit/issues"
    },
    "main": "dist/index.js",
    "module": "source/index.ts",
    "types": "dist/index.d.ts",
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml}": [
            "prettier --write"
        ],
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "scripts": {
        "test": "lint-staged && jest",
        "build": "rm -rf dist/ docs/  &&  tsc  &&  typedoc",
        "prepublishOnly": "npm test  &&  npm run build",
        "start": "open-cli docs/index.html"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    },
    "dependencies": {
        "@babel/core": "^7.4.3",
        "cross-spawn": "^7.0.2",
        "file-type": "^14.3.0",
        "fs-extra": "^9.0.0",
        "mime": "^2.4.5",
        "prettier": "^2.0.5",
        "uglify-js": "^3.5.4",
        "yaml": "^1.9.2"
    },
    "peerDependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.9.6",
        "@babel/preset-env": "^7.9.6"
    },
    "devDependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.9.6",
        "@babel/plugin-transform-runtime": "^7.4.3",
        "@babel/preset-env": "^7.9.6",
        "@types/babel__core": "^7.1.7",
        "@types/cross-spawn": "^6.0.1",
        "@types/fs-extra": "^8.1.0",
        "@types/jest": "^25.2.1",
        "@types/mime": "^2.0.1",
        "@types/prettier": "^2.0.0",
        "@types/uglify-js": "^3.9.0",
        "@types/yaml": "^1.9.7",
        "@typescript-eslint/eslint-plugin": "^2.32.0",
        "@typescript-eslint/parser": "^2.32.0",
        "eslint": "^7.0.0",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "lint-staged": "^10.2.2",
        "open-cli": "^5.0.0",
        "ts-jest": "^25.5.1",
        "typedoc": "^0.17.6",
        "typescript": "^3.8.3"
    },
    "test": {
        "env": {
            "development": {
                "example": {
                    "^test$": "example"
                }
            }
        }
    }
}
