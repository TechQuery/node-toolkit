{
    "compilerOptions": {
        "outDir": "dist/",
        "declaration": true,
        "target": "ES2017",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "lib": ["ES2020", "DOM"]
    },
    "include": ["source/*.ts"],
    "typedocOptions": {
        "name": "Node Toolkit",
        "mode": "file",
        "excludeExternals": true,
        "excludeNotExported": true,
        "readme": "./ReadMe.md",
        "out": "docs/"
    }
}
